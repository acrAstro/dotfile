" color scheme of the moment:
syntax on 

set enc=utf-8
set fenc=utf-8
set termencoding=utf-8
set t_Co=256
set guifont=monospace\ 8
set number
set ignorecase
set autoindent
set ruler
set incsearch
set noswapfile
set guioptions+=b
set nowrap
set smartindent
set showmatch
set cindent
" intelligent comments
set comments=sl:/*,mb:\ *,elx:\ */
"set foldmethod=syntax
"set foldcolumn=2
set tabstop=4 shiftwidth=4 expandtab

au BufRead,BufNewFile *.tex setlocal textwidth=80
au BufRead,BufNewFile *.py setlocal textwidth=80
au BufRead,BufNewFile *.c setlocal textwidth=80
au BufRead,BufNewFile *.h setlocal textwidth=80
au BufRead,BufNewFile *.ccc setlocal textwidth=80
au BufRead,BufNewFile *.hhh setlocal textwidth=80
au BufRead,BufNewFile *.cxx setlocal textwidth=80
au BufRead,BufNewFile *.hxx setlocal textwidth=80
au BufRead,BufNewFile *.cpp setlocal textwidth=80
au BufRead,BufNewFile *.hpp setlocal textwidth=80
au BufRead,BufNewFile *.md setlocal textwidth=80
au BufRead,BufNewFile *.go setlocal textwidth=80
filetype on

colorscheme desert

if &t_Co > 2 || has("gui_running")
	syntax on
	set hlsearch
endif

syntax match Tab /\t/
hi Tab gui=underline guifg=blue ctermbg=blue

if &diff
	" diff mode
	set diffopt+=iwhite
endif

source $VIMRUNTIME/mswin.vim
behave mswin

inoremap { {}<Left>
inoremap {<CR> {<CR>}<C-c>O

vnoremap <Tab> >
vnoremap <S-Tab> <
" in normal mode F2 will save the file
nmap <F2> :w<CR>
" in insert mode F2 will exit insert, save, enters insert again
imap <F2> <ESC>:w<CR>i
" switch between header/source with F4
map <F4> :e %:p:s,.h$,.X123X,:s,.cpp$,.h,:s,.X123X$,.cpp,<CR>
set wildchar=<Tab> wildmenu wildmode=full
set wildcharm=<C-Z>
nnoremap <F10> :b <C-Z>

set colorcolumn=80

let g:load_doxygen_syntax=1

